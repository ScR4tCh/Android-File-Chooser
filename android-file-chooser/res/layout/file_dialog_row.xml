<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left" >

	<ImageView android:layout_alignParentLeft="true"
	    	   android:id="@+id/fdrowimage"
			   android:layout_height="35dp"
			   android:layout_width="wrap_content"
			   android:paddingRight="5dp"
			   android:paddingLeft="3dp"
			   >    
	</ImageView>
	
	<ImageView
	    android:id="@+id/selected"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@+id/fdrowtext"
	    android:layout_alignBottom="@+id/fdrowimage"
	    android:paddingLeft="3dp"
	    android:paddingRight="5dp"
	    android:src="@drawable/tick"
	    android:visibility="gone" />
	
	<TextView
	    android:id="@+id/fdrowtext"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/fdrowimage"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/fdrowimage"
	    android:layout_toRightOf="@+id/fdrowimage"
	    android:gravity="center_vertical"
	    android:text="@+id/fdrowtext"
	    android:textAppearance="?android:attr/textAppearanceMedium" >

	</TextView>

	<TextView
	    android:id="@+id/info1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/fdrowtext"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/fdrowtext"
	    android:gravity="left"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:visibility="gone" />

	<TextView
	    android:id="@+id/info2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/info1"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/info1"
	    android:gravity="left"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:visibility="gone" />

</RelativeLayout>